{
  "name": "node-streams",
  "version": "0.2.0",
  "main": "index.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "license": "MIT",
  "author": "psxcode <psxcode@gmail.com> (https://github.com/psxcode)",
  "homepage": "https://github.com/psxcode/node-streams",
  "scripts": {
    "test": "NODE_ENV=test nyc mocha 'test/*.spec.ts'",
    "build": "NODE_ENV=production rimraf build && yarn build:js && yarn build:dts",
    "build:js": "NODE_ENV=production babel src --out-dir build --extensions '.ts' --source-maps inline",
    "build:dts": "tsc --emitDeclarationOnly -p tsconfig.build.json",
    "copy": "cp ./{package.json,LICENSE,readme.md} ./build/",
    "lint": "eslint 'src/*'"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@babel/runtime": "^7.3.1",
    "iterama": "^0.1.1",
    "node-on": "^0.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.0.0",
    "@psxcode/wait": "^0.1.1",
    "@types/chai": "^4.1.7",
    "@types/debug": "^4.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.9.4",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-preset-minify": "^0.5.0",
    "chai": "^4.2.0",
    "circularr": "^0.1.5",
    "debug": "^4.1.1",
    "eslint": "^5.14.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-typescript": "^1.0.0-0",
    "mocha": "^5.2.0",
    "node-stream-test": "^0.3.11",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.3",
    "test-fn": "^0.1.3",
    "time-test": "^0.1.0",
    "typescript": "^3.3.3"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "require": [
      "./tshook.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
